{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "TypeScriptVersion": {
      "enum": ["3.9", "4.0", "4.1", "4.2", "4.3", "4.4", "4.5", "4.6", "4.7", "4.8", "4.9", "5.0", "5.1"],
      "type": "string"
    }
  },
  "properties": {
    "tsMaxVersion": {
      "$ref": "#/definitions/TypeScriptVersion",
      "description": "highest TypeScript version to test against"
    },
    "tsMinVersion": {
      "$ref": "#/definitions/TypeScriptVersion",
      "description": "lowest TypeScript version to test against"
    },
    "verbose": {
      "description": "print all program logs",
      "type": "boolean"
    },
    "warnOnly": {
      "description": "don't fail the program if there is at least 1 issue with particular TypeScript",
      "type": "boolean"
    }
  },
  "type": "object"
}
