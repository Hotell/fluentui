{
  "name": "@fluentui/vr-tests",
  "version": "1.0.0",
  "private": true,
  "description": "Visual regression tests for Fluent UI React",
  "scripts": {
    "build": "build-storybook --no-manager-cache -o dist/storybook",
    "clean": "just-scripts clean",
    "code-style": "just-scripts code-style",
    "just": "just-scripts",
    "lint": "just-scripts lint",
    "start": "start-storybook -p 3000",
    "type-check": "tsc",
    "vr:build": "yarn build",
    "vr:test": "storywright  --browsers chromium --url dist/storybook --destpath dist/screenshots --waitTimeScreenshot 500 --concurrency 4 --headless true"
  },
  "devDependencies": {
    "@fluentui/eslint-plugin": "workspace:*",
    "@fluentui/scripts-storybook": "workspace:*",
    "@fluentui/scripts-tasks": "workspace:*"
  },
  "dependencies": {
    "@fluentui/example-data": "workspace:*",
    "@fluentui/font-icons-mdl2": "workspace:*",
    "@fluentui/react": "workspace:*",
    "@fluentui/react-experiments": "workspace:*",
    "@fluentui/react-hooks": "workspace:*",
    "@fluentui/react-icons-mdl2": "workspace:*",
    "@fluentui/storybook": "workspace:*",
    "@fluentui/react-charting": "workspace:*",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tslib": "^2.1.0"
  }
}
